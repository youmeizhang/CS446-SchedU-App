<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/lr_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="name"
        android:textSize="17dp" />
    <TextView
        android:id="@+id/lr_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lr_subject"
        android:layout_marginTop="7dp"
        android:textColor="#343434"
        android:textSize="14dp"
        android:text="course"/>
    <TextView
        android:id="@+id/lr_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lr_course"
        android:layout_alignBottom="@+id/lr_course"
        android:layout_alignParentRight="true"
        android:textColor="#343434"
        android:textSize="14dp"
        android:text="session"/>
    <TextView
        android:id="@+id/lr_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lr_course"
        android:textColor="#343434"
        android:textSize="14dp"
        android:text="priority"/>
</RelativeLayout>
