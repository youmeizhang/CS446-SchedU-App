<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="1, 1"
    android:stretchColumns="0,1,2,3,4,5">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        android:layout_width="0dp"
        android:layout_weight="1"

        <TextView android:text="  " />

        <TextView
            android:padding="3dip"
            android:text="Mon" />

        <TextView
            android:layout_width="wrap_content"
            android:padding="3dip"
            android:text="Tues" />

        <TextView
            android:padding="3dip"
            android:text="Wed" />

        <TextView
            android:padding="3dip"
            android:text="Thu" />

        <TextView
            android:padding="3dip"
            android:text="Fri" />
    </TableRow>

    <TableRow>
        android:layout_width="0dp"
        android:layout_weight="1"
        <TextView
            android:padding="3dip"
            android:text="8:00" />

        <TextView
            android:id="@+id/M8"
            android:padding="3dip" />

        <TextView
            android:id="@+id/T8"
            android:padding="3dip" />

        <TextView
            android:id="@+id/W8"
            android:padding="3dip" />

        <TextView
            android:id="@+id/Th8"
            android:padding="3dip" />

        <TextView
            android:id="@+id/F8"
            android:padding="3dip" />

    </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="9:00" />

            <TextView
                android:id="@+id/Mon9"
                android:padding="3dip" />

            <TextView
                android:id="@+id/Tue9"
                android:padding="3dip" />

            <TextView
                android:id="@+id/Wed9"
                android:padding="3dip" />

            <TextView
                android:id="@+id/Thur9"
                android:padding="3dip" />

            <TextView
                android:id="@+id/Fri9"
                android:padding="3dip" />
        </TableRow>

    <TableRow>
        <TextView
            android:text="10:00"
            android:padding="3dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="11:00"
            android:padding="3dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="12:00"
            android:padding="3dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="13:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="14:00"
