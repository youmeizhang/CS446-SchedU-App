    </TableRow>
    <TableRow>
        <TextView
            android:text="15:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="16:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="17:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="18:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="19:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="20:00"
            android:padding="5dip"/>
    </TableRow>

       <TableRow>
           <TextView
               android:text=""
               android:padding="5dip"/>

           <Button
               android:id="@+id/like"
               android:layout_width="56dp"
               android:layout_height="50dp"
               android:background="@drawable/heart" />

           <Button
               android:id="@+id/new_button"
               android:layout_width="30dp"
               android:layout_height="50dp" />

           <Button
               android:id="@+id/delete"
               android:layout_width="30dp"
               android:layout_height="50dp"
               android:background="@drawable/ic_delete" />
           <TextView
               android:text=""
               android:padding="5dip"/>

           <TextView
               android:text=""
               android:padding="5dip"/>
       </TableRow>

       <android.support.v4.view.ViewPager
           android:id="@+id/viewpager"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

   </TableLayout>