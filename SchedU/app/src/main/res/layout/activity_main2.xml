<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="1, 1"
    android:stretchColumns="*">
    <TableRow>
        android:layout_width="0dp"
        android:layout_weight="1"
        <TextView
            android:text="" />
        <TextView
            android:text="Monday"
            android:padding="3dip"/>

        <TextView
            android:padding="3dip"
            android:text="Tuesday" />
        <TextView
            android:text="Wednesday"
            android:padding="3dip"/>
        <TextView
            android:text="Thursday"
            android:padding="3dip"/>
        <TextView
            android:text="Friday"
            android:padding="3dip" />
    </TableRow>
    <TableRow>
        android:layout_width="0dp"
        android:layout_weight="1"
        <TextView
            android:text="8:00"
            android:padding="3dip"/>
        <Button
            android:id="@+id/Mon8"
            android:text="Mon8"
            android:padding="3dip" />

        <TextView
            android:id="@+id/Tue8"
            android:padding="3dip" />

        <TextView
            android:id="@+id/Wed8"
            android:padding="3dip" />

        <TextView
            android:id="@+id/Thur8"
            android:padding="3dip" />

        <TextView
            android:id="@+id/Fri8"
            android:padding="3dip" />

    </TableRow>

    <TableRow>

        <TextView
            android:padding="3dip"
            android:text="9:00" />

        <TextView
            android:id="@+id/Mon9"
            android:padding="3dip"
            android:text="" />

        <TextView
            android:id="@+id/Tue9"
            android:padding="3dip" />

        <TextView
            android:id="@+id/Wed9"
            android:padding="3dip" />

        <TextView
            android:id="@+id/Thur9"
            android:padding="3dip" />

        <TextView
            android:id="@+id/Fri9"
            android:padding="3dip" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="10:00"
            android:padding="3dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="11:00"
            android:padding="3dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="12:00"
            android:padding="3dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="13:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="14:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="15:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="16:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="17:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="18:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="19:00"
            android:padding="5dip"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="20:00"
            android:padding="5dip"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text=""
            android:padding="5dip"/>

        <Button
            android:id="@+id/like"
            android:layout_width="56dp"
            android:layout_height="50dp"
            android:background="@drawable/heart" />

        <Button
            android:id="@+id/new_button"
            android:layout_width="30dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_delete" />
        <TextView
            android:text=""
            android:padding="5dip"/>

        <TextView
            android:text=""
            android:padding="5dip"/>
    </TableRow>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</TableLayout>